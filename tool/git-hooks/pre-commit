#!/bin/bash
# Pre-commit hook for All Fintech SDK

set -e

echo "ğŸ” Running pre-commit checks..."

# Check if Flutter is available
if ! command -v flutter &> /dev/null; then
    echo "âŒ Flutter is not installed or not in PATH"
    exit 1
fi

# Format code
echo "ğŸ“ Formatting code..."
dart format --set-exit-if-changed .
if [ $? -ne 0 ]; then
    echo "âŒ Code formatting failed. Please run 'make format-fix' and commit again."
    exit 1
fi

# Run static analysis
echo "ğŸ” Running static analysis..."
flutter analyze --fatal-infos
if [ $? -ne 0 ]; then
    echo "âŒ Static analysis failed. Please fix the issues and commit again."
    exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
flutter test
if [ $? -ne 0 ]; then
    echo "âŒ Tests failed. Please fix the failing tests and commit again."
    exit 1
fi

echo "âœ… All pre-commit checks passed!"